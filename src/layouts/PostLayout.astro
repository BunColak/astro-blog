---
import { DateTime } from "luxon";
import BaseBlogLayout from './BaseBlogLayout.astro'
const {content: {releaseDate, tags, title, astro: {source}}} = Astro.props
---
<BaseBlogLayout title={title} description={source.substring(0,200)}>
<div class="prose max-w-none">
  <h1 class="mb-2 text-center">{title}</h1>
  <div class="mb-4 text-sm text-center text-gray-600 dark:text-gray-400">
    {DateTime.fromISO(releaseDate).toISODate()}
    <div class="flex flex-wrap justify-center">
      {tags?.map((tag) => <a class="mx-2 font-bold" href={`/tags/${tag}`} key={tag}>#{tag}</a>)}
    </div>
  </div>
  <slot />
</div>
</BaseBlogLayout>