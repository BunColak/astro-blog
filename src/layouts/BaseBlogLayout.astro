---
import Header from '../components/BlogHeader.svelte'
import BaseLayout from './BaseLayout.astro'

const { title, description, image } = Astro.props
---
  <BaseLayout description={description} title={title} image={image}>
      <div class="container pb-20 mx-auto">
        <div class="mx-4 md:mx-auto md:w-2/3">
          <Header />
          <slot />
        </div>
    </div>
  </BaseLayout>

